<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>CopyCatcher</PackageId>
        <Authors>Programazing</Authors>
        <Copyright>2023</Copyright>
        <PackageProjectUrl>https://github.com/Programazing/CopyCatcher</PackageProjectUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <RepositoryUrl>https://github.com/Programazing/CopyCatcher</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Title>CopyCatcher</Title>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>Copy Catcher is a cutting-edge library designed to swiftly and efficiently identify duplicate files within a specified directory. Harnessing the power of modern computing techniques, Copy Catcher ensures that your storage remains free of redundant data.</Description>
        <Version>1.0.0-beta</Version>
        <PackageLicenseUrl>https://github.com/Programazing/CopyCatcher/blob/main/LICENSE</PackageLicenseUrl>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../../README.md" Pack="true" PackagePath="\"/>
        <None Include="../../LICENSE" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
